{{#each errori}}
<div class="alert alert-danger">
    {{text}}
</div>
{{else}} {{/each}}

<h2 class="my-5">Modifica la tua nota</h2>
<div class="card card-body mt-5">
    <form action="/lista_note/{{nota.id}}?_method=POST" method="post">
        <div class="form-group">
            <label for="titolo">Titolo</label>
            <input type="text" name="titolo" id="titolo" class="form-control" value="{{nota.titolo}}">
        </div>
        <div class="form-group">
            <label for="contenuto">Contenuto</label>
            <textarea name="contenuto" id="contenuto" cols="30" rows="10" class="form-control">{{nota.contenuto}}</textarea>
        </div>
        <input type="hidden" name="_method" value="POST">
        <button type="submit" class="btn btn-success" name="aggiungi">Invia</button>
    </form>
</div>